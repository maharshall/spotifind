{
    "name": "Spotifind",
    "author": "Alexander Marshall",
    "version": "0.1",
    "description": "Search for things on Spotify!",
    "manifest_version": 2,

    "background": {
        "scripts": [
            "js/background.js",
            "js/jquery-3.3.1.min.js"
        ],
     "persistent": false
    },

    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },

    "permissions": [
        "activeTab",
        "contextMenus",
        "tabs"
    ],

    "icons": {
        "16": "icon.png"
    }
}