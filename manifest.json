{
    "name": "Spotifind",
    "author": "Alexander Marshall",
    "version": "0.1",
    "description": "Search for albums on Spotify and add them to your playlists!",
    "manifest_version": 2,

    "background": {
        "scripts": [
            "js/jquery.min.js",
            "js/background.js"
        ],
     "persistent": false
    },

    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },

    "content_scripts": [
        {
            "matches": [
                "https://*/*", 
                "http://*/*"
            ],
            "css": [
                "css/content.css"
            ],
            "js": [
                "js/jquery.min.js", 
                "js/content.js"
            ],
            "run_at" : "document_idle",
            "all_frames": false
        }
    ],

    "permissions": [
        "activeTab",
        "tabs",
        "contextMenus",
        "identity",
        "storage",
        "notifications"
    ],

    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },

    "web_accessible_resources": [
        "content.css",
        "icon.png"
    ],
    
    "key": "ehjifnpbboehdadjkgmgfmjlibbalald"
}
