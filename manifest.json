{
    "name": "Spotifind",
    "author": "Alexander Marshall",
    "version": "0.1",
    "description": "Search for things on Spotify!",
    "manifest_version": 2,

    "background": {
        "scripts": [
            "js/jquery.min.js",
            "js/background.js"
        ],
     "persistent": false
    },

    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },

    "permissions": [
        "activeTab",
        "contextMenus",
        "identity",
        "storage",
        "notifications"
    ],

    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    
    "key": "ehjifnpbboehdadjkgmgfmjlibbalald"
}
